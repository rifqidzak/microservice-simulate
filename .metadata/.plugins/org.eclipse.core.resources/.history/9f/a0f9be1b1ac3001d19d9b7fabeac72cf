package com.example.microservice.core.util;

import java.security.KeyPair;

import io.jsonwebtoken.SignatureAlgorithm;
import io.jsonwebtoken.io.Encoders;
import io.jsonwebtoken.security.Keys;

public class JwtKeyGenerator {

	public static void main(String[] args) {
		final KeyPair key = Keys.keyPairFor(SignatureAlgorithm.RS256);
		final String publicKey =  Encoders.BASE64.encode(key.getPublic().getEncoded());
		final String privateKey =  Encoders.BASE64.encode(key.getPrivate().getEncoded());
	}
	
	
}
