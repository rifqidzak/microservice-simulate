package com.example.microservice.userservice.service.implementation.jwt;

import java.util.Map;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;

import com.example.microservice.userservice.service.declaration.jwt.JwtService;

import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.io.Decoders;
import io.jsonwebtoken.security.Keys;

@Service
public class JwtServiceImpl implements JwtService {
	@Value("${private.key}")
	private String privateKey;
	
	@Override
	public String generateJwt(Map<String, Object> claims) {
		final var key = Keys.hmacShaKeyFor(Decoders.BASE64.decode(privateKey));
		final String jwt = Jwts.builder().setClaims(claims).signWith(key).compact();
		return jwt;
	}
}
